    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }, 

        {
            "name": "Debug Unittest",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/-m",
            "module": "unittest",
            "args": [
                "discover",
                "-s",
                "test",
                "-p",
                "*test.py",
                "-v"
            ],
            "console": "integratedTerminal"
        }
    ]
}